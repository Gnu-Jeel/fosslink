---
const allPages = [
  { text: "Home", url: "/" },
  { text: "Features", url: "/features" },
  { text: "FAQ", url: "/faqs" },
  { text: "Integrations", url: "/integrations" },
  { text: "About Us", url: "/company" },
  { text: "Services", url: "/services" },
  { text: "Contact", url: "/contact" },
  { text: "Privacy Policy", url: "/privacy-policy" },
  { text: "Terms of Service", url: "/terms-conditions" },
  { text: "404 Page", url: "/404" }
];
---
<header
  x-data="{ currentPath: window.location.pathname }"
  class="fixed w-full bg-white/90 dark:bg-secondary-950/90 backdrop-blur-xs z-50 py-4 transition-colors duration-300"
>
  <div class="container-custom flex items-center justify-between px-4 ">
    <a href="/" class="flex items-center" aria-label="Go to homepage">
      <img src="/favicon.svg" width="32" height="32">
      <span class="ml-2 text-2xl font-display font-semibold text-secondary-900 dark:text-white">Fosslink</span>
    </a>
    
    <nav class="hidden md:flex items-center space-x-8">
      <a
        href="/"
        class="font-medium transition-colors hover:text-primary-600 dark:hover:text-primary-400"
        :class="currentPath === '/' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-600 dark:text-secondary-300'"
      >Home</a>
      <a
        href="/services"
        class="font-medium transition-colors hover:text-primary-600 dark:hover:text-primary-400"
        :class="currentPath === '/services' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-600 dark:text-secondary-300'"
      >Services</a>
      <a
        href="/features"
        class="font-medium transition-colors hover:text-primary-600 dark:hover:text-primary-400"
        :class="currentPath === '/features' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-600 dark:text-secondary-300'"
      >Features</a>
      <a
        href="/integrations"
        class="font-medium transition-colors hover:text-primary-600 dark:hover:text-primary-400"
        :class="currentPath === '/integrations' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-600 dark:text-secondary-300'"
      >Integrations</a>
      <a
        href="/company"
        class="font-medium transition-colors hover:text-primary-600 dark:hover:text-primary-400"
        :class="currentPath === '/company' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-600 dark:text-secondary-300'"
      >About</a>
      <a
        href="/contact"
        class="font-medium transition-colors hover:text-primary-600 dark:hover:text-primary-400"
        :class="currentPath === '/contact' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-600 dark:text-secondary-300'"
      >Contact</a>
    </nav>
    
    <div class="flex items-center space-x-4">
      <button 
        x-on:click="darkMode = !darkMode" 
        class="p-2 rounded-full text-secondary-500 hover:text-secondary-700 dark:text-secondary-400 dark:hover:text-secondary-200 focus:outline-hidden focus:ring-2 focus:ring-primary-500"
        aria-label="Toggle dark mode"
      >
        <svg x-show="!darkMode" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
        <svg x-show="darkMode" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </button>
            
      <div x-data="{ open: false, showAllPages: false }"> {/* currentPath from parent header x-data is accessible here */}
        <button 
          @click="open = !open"
          class="md:hidden p-2 rounded-md text-secondary-600 hover:text-secondary-900 dark:text-secondary-300 dark:hover:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500"
          aria-label="Toggle menu"
        >
          <svg x-show="!open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg x-show="open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        
        <div 
          x-show="open" 
          x-transition:enter="transition ease-out duration-200"
          x-transition:enter-start="opacity-0 scale-95"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="transition ease-in duration-150"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-95"
          class="absolute top-16 right-4 w-48 py-2 bg-white dark:bg-secondary-900 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-hidden"
          x-cloak
        >
          <a
            href="/"
            class="block px-4 py-2 text-sm hover:bg-secondary-100 dark:hover:bg-secondary-800"
            :class="currentPath === '/' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-700 dark:text-secondary-300'"
          >Home</a>
          <a
            href="/services"
            class="block px-4 py-2 text-sm hover:bg-secondary-100 dark:hover:bg-secondary-800"
            :class="currentPath === '/services' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-700 dark:text-secondary-300'"
          >Services</a>
          <a
            href="/features"
            class="block px-4 py-2 text-sm hover:bg-secondary-100 dark:hover:bg-secondary-800"
            :class="currentPath === '/features' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-700 dark:text-secondary-300'"
          >Features</a>
          <a
            href="/integrations"
            class="block px-4 py-2 text-sm hover:bg-secondary-100 dark:hover:bg-secondary-800"
            :class="currentPath === '/integrations' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-700 dark:text-secondary-300'"
          >Integrations</a>
          <a
            href="/company"
            class="block px-4 py-2 text-sm hover:bg-secondary-100 dark:hover:bg-secondary-800"
            :class="currentPath === '/company' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-700 dark:text-secondary-300'"
          >About</a>
          <a
            href="/contact"
            class="block px-4 py-2 text-sm hover:bg-secondary-100 dark:hover:bg-secondary-800"
            :class="currentPath === '/contact' ? 'text-primary-600 dark:text-primary-400' : 'text-secondary-700 dark:text-secondary-300'"
          >Contact</a>
        </div>
      </div>
    </div>
  </div>
</header>
---
---
<section class="relative pt-32 pb-20 md:pt-40 md:pb-28 overflow-hidden">
  <div class="container-custom relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="slide-up">
        <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-6">
          Simplify Your Workflow
        </span>
        <h1 class="mb-6 text-gray-900 dark:text-white leading-tight">
          Streamline Your Business with Our <span class="text-primary-600 dark:text-primary-400">All-in-One</span> SaaS Solution
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-lg">
          Boost productivity, reduce costs, and scale your business with our powerful, easy-to-use platform designed for modern teams.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#signup" class="btn-primary">
            Start Free Trial
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="#demo" class="btn-outline">
            Watch Demo
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
      
      <div class="relative fade-in">
        <div class="absolute inset-0 bg-gradient-to-r from-primary-500/20 to-secondary-500/20 rounded-3xl transform rotate-3 scale-105"></div>
        <div class="relative bg-white dark:bg-gray-800 rounded-3xl shadow-xl overflow-hidden border border-gray-200 dark:border-gray-700">
          <div class="p-1 bg-gradient-to-r from-primary-500 to-secondary-500">
            <div class="flex space-x-1.5 px-3 py-1.5">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="h-8 bg-gray-200 dark:bg-gray-700 rounded-md w-3/4"></div>
              <div class="space-y-2">
                <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
                <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
                <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-4/6"></div>
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div class="h-24 bg-primary-100 dark:bg-primary-900/50 rounded-lg flex items-center justify-center">
                  <div class="w-12 h-12 rounded-full bg-primary-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                  </div>
                </div>
                <div class="h-24 bg-secondary-100 dark:bg-secondary-900/50 rounded-lg flex items-center justify-center">
                  <div class="w-12 h-12 rounded-full bg-secondary-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-secondary-600 dark:text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                  </div>
                </div>
              </div>
              <div class="h-10 bg-primary-500 dark:bg-primary-600 rounded-md w-1/3 mx-auto"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-20 slide-up">
      <p class="text-center text-sm uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-6">Trusted by leading companies worldwide</p>
      <div class="flex flex-wrap justify-center gap-x-12 gap-y-6">
        <div class="h-8 w-24 bg-gray-200 dark:bg-gray-800 rounded"></div>
        <div class="h-8 w-28 bg-gray-200 dark:bg-gray-800 rounded"></div>
        <div class="h-8 w-20 bg-gray-200 dark:bg-gray-800 rounded"></div>
        <div class="h-8 w-32 bg-gray-200 dark:bg-gray-800 rounded"></div>
        <div class="h-8 w-24 bg-gray-200 dark:bg-gray-800 rounded"></div>
      </div>
    </div>
  </div>
  
  <!-- Background decorations -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10">
    <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-gradient-to-br from-primary-300/20 to-primary-500/20 dark:from-primary-900/20 dark:to-primary-700/20 rounded-full blur-3xl transform translate-x-1/3 -translate-y-1/4"></div>
    <div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-gradient-to-tr from-secondary-300/20 to-secondary-500/20 dark:from-secondary-900/20 dark:to-secondary-700/20 rounded-full blur-3xl transform -translate-x-1/3 translate-y-1/4"></div>
  </div>
</section>

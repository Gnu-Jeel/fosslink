---
// src/components/Features.astro

// Import the Icon component from astro-iconify
import { Icon } from 'astro-iconify';

// Define feature data directly here or import from another file
// Using the 6 features provided in your last code snippet
const features = [
  {
    title: "Seamless Integration",
    description: "Connect and control your favorite smart devices easily. Integrates with Google Home, Alexa, HomeKit, Matter, and more.",
    icon: "mdi:link-variant", // Iconify name string
    color: "primary" // Used for styling icon/background
  },
  {
    title: "Intelligent Automation",
    description: "AI learns your habits to proactively manage lighting, climate, and security - optimizing comfort and efficiency automatically.",
    icon: "mdi:brain", // Iconify name string
    color: "primary" // Used for styling icon/background
  },
  {
    title: "Personalized Automation",
    description: "Get automations tailored to your Ahmedabad lifestyle. Our experts design custom sequences for your unique needs and home.",
    icon: "mdi:account-cog", // Iconify name string
    color: "primary" // Used for styling icon/background
  },
  {
    title: "Control From Any Device",
    description: "Easily manage your smart home via our intuitive app, available across iOS, Android, tablets, and web browsers.",
    icon: "mdi:cellphone-link", // Iconify name string
    color: "primary" // Used for styling icon/background
  },
  {
    title: "Location-Aware Automation",
    description: "Automatically trigger lights, climate, and security based on your phone's location as you come and go.",
    icon: "mdi:map-marker-radius-outline", // Iconify name string
    color: "primary" // Used for styling icon/background
  },
  {
    title: "Intelligent Home Monitoring",
    description: "AI monitors your home, learns normal patterns, and alerts you to unusual activity or potential issues for greater peace of mind.",
    icon: "mdi:shield-check-outline", // Iconify name string
    color: "primary" // Used for styling icon/background
  }
  // Add more features to this array if needed for this specific section
];
---

<section id="features" class="section bg-gray-50 dark:bg-gray-800/50 py-16 md:py-24"> {/* Added background & padding */}
  <div class="container-custom mx-auto px-4 md:px-16"> {/* Ensured container */}

    {/* Section Heading */}
    <div class="text-center max-w-3xl mx-auto mb-12 md:mb-16"> {/* Adjusted margin */}
      <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
        Smart Home Capabilities
      </span>
      <h2 class="text-2xl md:text-3xl font-bold mb-6 text-gray-900 dark:text-white"> {/* Adjusted heading level/size */}
        Unlock the Potential of Your Home
      </h2>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300">
        Discover how our smart home features work together to enhance your daily routines, improve security, save energy, and provide ultimate convenience.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div
          class="card p-6 border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-secondary-900 shadow-sm slide-up"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class={`w-12 h-12 rounded-lg bg-${feature.color}-100 dark:bg-${feature.color}-900/30 flex items-center justify-center mb-6`}>
            <Icon
              name={feature.icon}
              class={`w-6 h-6 text-${feature.color}-600 dark:text-${feature.color}-400`}
              aria-hidden="true"
            />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{feature.title}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">{feature.description}</p> 
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a href="/features" class="btn-primary inline-flex items-center"> {/* Changed to btn-primary, Link to Features page */}
        Explore All Features
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>
---
// src/components/Footer.astro
import { Icon } from 'astro-iconify';

const currentYear = new Date().getFullYear();

// Define essential links directly
const essentialLinks = [
  { text: "Home", url: "/" },
  { text: "Services", url: "/services" },
  { text: "Features", url: "/features" },
  { text: "Integrations", url: "/integrations"},
  { text: "FAQ", url: "/faqs" },
  { text: "About", url: "/company" },
  { text: "Contact", url: "/contact" }
];

// Keep Privacy/Terms separate for the very bottom
const legalLinks = [
 { text: "Privacy Policy", url: "/privacy-policy" },
 { text: "Terms of Service", url: "/terms-conditions" }
];

// Define your social media links
const socialLinks = [
  { name: "WhatsApp", url: "https://wa.me/+917383896029", icon: "logos:whatsapp-icon" },
  { name: "Telegram", url: "https://t.me/itsjeeldesai", icon: "logos:telegram" },
  { name: "Instagram", url: "https://instagram.com/fosslink", icon: "skill-icons:instagram" }
];
---

<footer class="bg-gray-900 text-gray-400 pt-16 pb-8">
  <div class="container-custom px-4 ">
    {/* Top section: Logo/Description (Left) vs Social/Links (Right) */}
    <div class="flex flex-col md:flex-row justify-between items-center md:items-start gap-10 mb-12 text-center md:text-left">

      {/* Left: Logo & Description (No changes) */}
      <div class="max-w-md">
        <a href="/" class="inline-flex items-center justify-center md:justify-start mb-6" aria-label="Go to homepage">
          <img src="/favicon.svg" height="42" width="42" alt="Fosslink Logo">
          <span class="ml-5 text-4xl font-display font-semibold text-white">Fosslink</span>
        </a>
        <p class="text-gray-400">
          Bring your devices online for remote control and automated scheduling. Enjoy enhanced comfort, efficiency, and security from anywhere.
        </p>
      </div>

      {/* Right: Social Icons + Essential Links */}
      <div class="flex flex-col items-center md:items-end md:mt-20"> {/* Group stays vertical */}
        {/* Social Icons (No changes) */}
        <div class="flex space-x-5">
          {socialLinks.map(social => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-primary-400 transition-colors duration-200 ease-in-out"
              aria-label={`Follow us on ${social.name}`}
              title={social.name}
            >
              <Icon name={social.icon} class="w-6 h-6" />
            </a>
          ))}
        </div>

        {/* Essential Links (Nav + UL updated) */}
        <nav class="mt-6 w-full" aria-label="Essential navigation">
          {/* --- UL CLASS UPDATED HERE --- */}
          <ul class="flex flex-col items-center space-y-2 md:flex-row md:flex-wrap md:items-center md:justify-start md:space-y-0 md:space-x-5 md:gap-y-2">
            {/*
              - Mobile (default): flex flex-col items-center space-y-2 -> Vertical stack, centered items
              - Medium screens & up (md:):
                - md:flex-row -> Change direction to horizontal
                - md:flex-wrap -> Allow wrapping if needed
                - md:items-center -> Vertically align items in the center of the row
                - md:justify-start -> Align items to the start (left)
                - md:space-y-0 -> Remove vertical spacing
                - md:space-x-5 -> Add horizontal spacing between items
                - md:gap-y-2 -> Add vertical gap if items wrap to the next line
            */}
            {essentialLinks.map(link => (
              <li>
                <a href={link.url} class="text-gray-400 hover:text-primary-400 transition-colors text-sm whitespace-nowrap"> {/* Added whitespace-nowrap */}
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </div>

    {/* Bottom section: Border + Centered Copyright + Legal Links (No changes) */}
    <div class="border-t border-gray-800 pt-8 mt-12 text-center">
       <nav class="flex flex-wrap justify-center gap-x-5 gap-y-2 mb-4" aria-label="Legal navigation">
           {legalLinks.map(link => (
             <a href={link.url} class="text-gray-400 hover:text-primary-400 text-xs transition-colors duration-200 ease-in-out">
               {link.text}
             </a>
           ))}
         </nav>
      <p class="text-gray-500 text-xs">
        &copy; {currentYear} Fosslink. All rights reserved.
      </p>
      <p class="text-gray-500 text-xs mt-1">
        Made by
        <a
          href="https://jeeldesai.com"
          target="_blank"
          rel="noopener noreferrer nofollow"
          class="hover:text-primary-400 hover:underline transition-colors duration-200 ease-in-out"
        >
           Jeel Desai
        </a>
      </p>
    </div>
  </div>
</footer>
---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';

const integrations = [
  { name: "Amazon Alexa", description: "Control your Fosslink system using Amazon Alexa voice commands and routines.", logoUrl: "./integrations/alexa.svg", category: "Voice Assistant" },
  { name: "Google Assistant", description: "Use Google Assistant for voice control of your smart home devices through Fosslink.", logoUrl: "./integrations/google_assistant.svg", category: "Voice Assistant" },
  { name: "Apple Home", description: "Integrate Fosslink with Apple HomeKit for control via Siri and the Apple Home app.", logoUrl: "./integrations/apple_homekit.svg", category: "Platform" },
  { name: "Samsung SmartThings", description: "Link Fosslink with Samsung SmartThings devices and existing automations.", logoUrl: "https://static.wikia.nocookie.net/logopedia/images/1/1e/SmartThings_2024_icon.svg", category: "Platform" },
  { name: "Philips Hue", description: "Control your Hue smart lights, bulbs, and accessories within Fosslink scenes.", logoUrl: "./integrations/hue.webp", category: "Lighting" },
  { name: "WiZ Connected", description: "Manage your WiZ smart lights and integrate them into Fosslink routines.", logoUrl: "./integrations/wiz.webp", category: "Lighting" },
  { name: "Zigbee", description: "Connect compatible Zigbee sensors, lights, switches, and other devices directly.", logoUrl: "./integrations/zigbee.png", category: "Protocol" },
  { name: "BMW ConnectedDrive", description: "Connect with your BMW for location-based automation triggers or vehicle status checks.", logoUrl: "./integrations/bmw.svg", category: "Automotive" },
  { name: "Matter (via Thread/WiFi)", description: "Support for compatible devices using the new Matter standard over Thread or WiFi.", logoUrl: "./integrations/matter.png", category: "Protocol" },
  { name: "LG SmartThinQ", description: "Control compatible LG smart appliances or TVs through Fosslink automations.", logoUrl: "./integrations/lg.svg", category: "Appliances" },
  { name: "Tuya / Smart Life", description: "Integrate compatible Tuya/Smart Life devices into your local Fosslink system.", logoUrl: "./integrations/tuya.svg", category: "Platform" },
  { name: "Ring", description: "Integrate Ring cameras and doorbells for enhanced security views and automation triggers.", logoUrl: "./integrations/ring.svg", category: "Security" },
  { name: "ESPHome", description: "Connect and control your custom DIY ESPHome devices, sensors, and automations.", logoUrl: "./integrations/esphome.ico", category: "DIY/Developer" },
  { name: "MQTT", description: "Utilize the standard MQTT protocol for flexible integration with custom devices and services.", logoUrl: "./integrations/mqtt.png", category: "Protocol" },
  { name: "Z-Wave", description: "Integrate Z-Wave devices like smart locks, sensors, and thermostats into your system.", logoUrl: "./integrations/z_wave.svg", category: "Protocol" },
  { name: "Shelly", description: "Integrate and control Shelly smart relays, plugs, and sensors known for versatility and local control options.", logoUrl: "./integrations/shelly.png", category: "Relays/DIY" },
  { name: "Google Cast", description: "Cast audio or control playback on Chromecast and Google Nest devices directly from Fosslink automations.", logoUrl: "./integrations/google_cast.png", category: "Entertainment" },
  { name: "Sonos", description: "Integrate your Sonos speakers for multi-room audio control within Fosslink scenes and automations.", logoUrl: "./integrations/sonos.png", category: "Audio" },
  { name: "Lutron", description: "Control Lutron Cas√©ta & RA smart lighting, shades, and switches seamlessly through the Fosslink system.", logoUrl: "./integrations/lutron.webp", category: "Lighting" },
  { name: "KNX", description: "Connect Fosslink with robust KNX wired automation systems for seamless control in high-end installations.", logoUrl: "./integrations/knx.svg", category: "Protocol/Wired" },
];

---

<Layout title="Smart Home Integrations (Google, Alexa) | Ahmedabad | Fosslink" description="See which smart home devices and platforms like Google Home, Amazon Alexa, and Apple HomeKit integrate with Fosslink's automation solutions.">
  <Header />
  <main>
    <HeroSection 
      title="Our Integrations" 
      highlightText=" Connects"
      description="Connect with the smart devices and platforms you already use and love."
    />
    {/* --- End Hero Section --- */}
    
    <section class="py-16 md:py-24 bg-white dark:bg-gray-800">
      <div class="container-custom mx-auto px-4 md:px-16"> {/* Applied container classes */}
        <div class="text-center mb-12 md:mb-16">
          {/* Updated Intro Text */}
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Connect Your Smart Home World</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            Fosslink connects with a wide array of popular smart home devices, platforms, and protocols, allowing you to build a truly unified and intelligent home.
          </p>
        </div>
        
        {/* --- Category Filters Removed --- */}
        {/* <div class="flex flex-wrap justify-center gap-4 mb-12"> ... </div> */}
        
        {/* Integration Grid */}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 md:gap-8 mb-16"> {/* Adjusted grid columns */}
          
          {/* Loop through integrations data */}
          {integrations.map(integration => (
            // Updated Card Structure: Centered content, no "Learn More"
            <div class="card p-6 border border-gray-200 dark:border-gray-700 flex flex-col items-center text-center rounded-lg transition-shadow hover:shadow-md dark:bg-secondary-900">
              <img 
                  src={integration.logoUrl} 
                  alt={`${integration.name} Logo`} 
                  class="w-16 h-16 mb-4 object-contain rounded-lg" 
                  loading="lazy" 
                  width="64" height="64" 
              />
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{integration.name}</h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm flex-grow">{integration.description}</p> {/* flex-grow helps align heights */}
              {/* Removed Learn More Link and mt-auto div */}
            </div>
          ))}
          
        </div> {/* End Grid */}

      </div>
    </section>
  </main>
  <Footer />
</Layout> 